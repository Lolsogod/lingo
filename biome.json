{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConfusingLabels": "off"
			},
			"correctness": {
				"noUnusedLabels": "off"
			}
		}
	},
	"files": {
		"ignore": [
			".DS_Store",
			"node_modules",
			"/build",
			".svelte-kit/**",
			"/package",
			".env",
			".env.*",
			"!.env.example",
			"pnpm-lock.yaml",
			"package-lock.json",
			"yarn.lock",
			"src/lib/components/ui/**"
		]
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					}
				}
			}
		}
	]
}
